<%= error_messages_for 'player' %>
<% form_for(@player, :html => { :multipart => true }) do |f| %>
	<p>
	First Name:<br>
	<%= f.text_field :first_name %>
	</p>
	<p>
	Last Name:<br>
	<%= f.text_field :last_name %>
	</p>
	<p>
	Email:<br>
	<%= f.text_field :email %><br>
	<i>Email is required for challenge notifications and password resets.</i>
	</p>
	<p>
	Username:<br>
	<%= f.text_field :login %>
	</p>
	<p>
	Password:<br>
	<%= f.password_field :password %>
	</p>
	<p>
	Avatar:<br>
  <%= f.file_field :avatar %><br>
  <i>Upload an image of yourself.</i>
	</p>
	<p>
	<%= hidden_field_tag 'question', "#{@spam.question}" %>
	<%= "#{@spam.question}" %><br>
	<%= text_field_tag :answer %>
	</p>
	<p>
	<%= submit_tag "Save" %>
	</p>
<% end %>


